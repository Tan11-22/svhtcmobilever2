<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>

            <TextView
                android:id="@+id/tvNienKhoa"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Niên khóa" />

            <TextView
                android:id="@+id/tvHocKy"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Học kỳ"
                />
            <TextView
                android:id="@+id/tvHocPhi"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Học phí"
                />
            <TextView
                android:id="@+id/tvDaDong"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Đã đóng"
                />
            <TextView
                android:id="@+id/tvNo"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Nợ"
                />
            <ImageView
                android:id="@+id/ivXuatPDF"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_picture_as_pdf_24"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>